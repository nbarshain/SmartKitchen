<h1><%= @list.name %></h1>

<table>
	<tr>
		<th>Quantity</th>
		<th>Name</th>
		<th colspan="3"></th>
	</tr>
	<% @foods.each do |food| %>
		<% if food.list == @list %>
			<tr>
				<td><%= food.quantity %></td>
				<td><%= food.name %></td>
				<td><%= link_to 'Edit', edit_food_path(food) %></td>
				<td>
					<%= link_to 'Delete', food_path(food), 
					method: :delete, data: {confirm: 'Are you sure?'} %>
				</td>
				<td>
					<%= button_to 'Bought', controller: 'foods', action: 'bought', food_id: food.id %>
				</td>
			</tr>
		<% end %>
	<% end %>
</table>

<br>
<% params[:type] = 'list' %>
<%= render 'foods/new' %>

<br>
<h3><%= link_to 'Back to Lists', lists_path %> | <%= link_to 'See All Cabinets', cabinets_path %></h3>